---
import { getOffersSortedByPrice } from "../../../utils/storyblok";
import OfferItem from "../../components/moleculs/OfferItem.astro";
import PageLayout from "../../layout/PageLayout.astro";
const stories = await getOffersSortedByPrice();
---

<PageLayout meta={{ title: "Nos offres" }}>
    <h1 class="font-title text-4xl text-gray-900 text-center mt-14 mb-7">
        Nos offres
    </h1>
    <p class="text-center max-w-[64ch] text-gray-500 mx-auto">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut pretium
        pellentesque turpis vitae mattis. Cras rutrum turpis non urna mattis
        maximus.
    </p>
    <div
        class="max-w-6xl px-4 md:px-0 mx-auto grid md:grid-cols-4 gap-5 mt-14 mb-16 md:mb-36"
    >
        {stories.map((story) => <OfferItem isPage={true} component={story} />)}
    </div>
</PageLayout>
