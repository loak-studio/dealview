---
import { getOffersSortedByPrice } from "../../../utils/storyblok";
import ButtonOutline from "../atoms/ButtonOutline.astro";
import OfferItem from "../moleculs/OfferItem.astro";
const stories = await getOffersSortedByPrice()
---

<section class="max-w-6xl px-4 lg:px-0 w-full mx-auto text-gray-900">
    <h2 class="md:text-center text-3xl font-medium mb-7">Nos Offres</h2>
    <span class="block md:text-center">Comparez nos diff√©rentes offres et choisissez-celle qui vous convient le mieux
        !</span>
    <div class="grid md:grid-cols-4 gap-5 mt-14">
        {stories.map(story=>
        <OfferItem component={story} />
        )}
    </div>
    <div class="flex justify-center mt-14">
        <ButtonOutline href="/nos-offres/">Voir le comparatif</ButtonOutline>
    </div>
</section>