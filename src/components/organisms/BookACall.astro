---
import { getContactLink } from "../../../utils/storyblok";
import ButtonOutline from "../atoms/ButtonOutline.astro";
import Icon from "../atoms/Icon.astro";
import ArrowsBackground from "../atoms/illustrations/ArrowsBackground.astro";
import Handshake from "../atoms/illustrations/Handshake.astro";
const link = await getContactLink();
---

<div class="relative bg-gradient-to-r from-primary to-secondary">
    <div
        class="z-10 relative max-w-6xl flex flex-col px-4 lg:px-0 items-center lg:flex-row w-full mx-auto py-14"
    >
        <Handshake />
        <div
            class="flex-1 flex mt-4 lg:mt-0 items-center flex-col space-y-8 justify-center"
        >
            <h2 class="text-3xl text-white">
                Construisons ensemble votre stratégie commerciale BtoB !
            </h2>
            <p class="text-white">Il ne reste plus qu'à passer à l'action !</p>
            <ButtonOutline target="_blank" href={link}>
                Prenez rendez-vous
                <span class="ml-2">
                    <Icon size={25} name="external" />
                </span>
            </ButtonOutline>
        </div>
    </div>
    <div class="absolute right-0 bottom-0">
        <ArrowsBackground />
    </div>
</div>
