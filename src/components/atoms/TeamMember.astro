---
import Icon from "./Icon.astro";

const { member } = Astro.props
---

<div class="bg-gray-700 p-4 lg:p-10 rounded-md gap-8">
    <div>
        <h3 class="text-xl">{member.name}</h3>
        <div class="flex items-center gap-5 mt-2">
            <span class=" text-gray-200">{member.content.title}</span>
            <a target="_blank" class=" hover:bg-gray-500 rounded-md transition" href={member.content.linkedin}>
                <Icon size={30} name="linkedin" />
            </a>
        </div>
    </div>
    <div class="flex flex-col xl:flex-row  gap-8 mt-8">
        <figure class="shrink-0 max-w-[250px] w-full">
            <img class="rounded-md w-full" src={member.content.picture.filename} alt={member.name}>
        </figure>
        <p class="max-w-[64ch] leading-relaxed">{member.content.description}</p>

    </div>

</div>